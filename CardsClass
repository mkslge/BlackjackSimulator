package deckOfCards;

/* Class that represents Cards
 * 
 */
public class CardsClass {
	
	private Suit suit;
	private Rank rank;
	
	public Card(Rank rank, Suit suit) {
		this.suit = suit;
		this.rank = rank;
	}
	
	public Rank getRank() {
		return this.rank;
	}


	public Suit getSuit() {
		return this.suit;
	}
	
	@Override
	public String toString() {
		return rank + " Of " + suit;
	}
	
	@Override
	public boolean equals(Object other) {
		if (!(other instanceof Card)) {
			return false;
		}
		Card card = (Card)other;
		return card.suit == this.suit && card.rank == this.rank;
	}
} 
